
@keyframes growd {
  0% { max-height: 900px;  }

  100% { max-height: 300px; }
}

.grows {
  animation: growd 3.5s normal;
  overflow hidden
  height 1200px
  max-height: 300px;
}


.page
    display flex
    flex-direction: column
    align-items: center
    min-width 100vw
    min-height: 100vh
    padding: 16px
    .layout-box
        width: 100%
        height: 100%
        margin-top: 110px
        max-width: 701px
        min-height: 590px
        h1
            text-align: center
            font-family: 'Helvetica Now Display'
            font-size: 50px
            color: #222B39
            font-weight: 300
            user-select none
        h4
            text-align: center
            font-family: 'Helvetica Now Display'
            font-size: 30px
            color: #4F5A6B
            font-weight: 200
            user-select none
        h5    
            text-align: left 
            font-family: 'Helvetica Now Display'
            font-size: 15px
            color: #222B39
            font-weight: 300
            user-select none
            margin-bottom: 21px
        p
            text-align: left 
            font-family: 'Helvetica Now Display'
            font-size: 18px
            color: #222B39
            font-weight: 300
        section
            height 160px
            display flex
            flex-direction: column-reverse
            div 
                display: flex
                justify-content: center
                a
                    text-align: center
                    font-family: 'Playfair Display';
                    font-size: 20px
                    text-decoration: underline
                    color: #222B39
                    font-weight: 300
                    user-select none
                    cursor pointer
                    img
                        margin-right: 9px 
