@keyframes growd {
  0% { max-height: 0;  }

  100% { max-height: 1000px; }
}

.grows {
  animation: growd 3.5s normal;
  overflow hidden
  max-height: 1000px;
}


.page
    display flex
    flex-direction: column
    align-items: center
    min-width 100vw
    min-height: 100vh
    padding: 16px
    overflow hidden
    .layout-box
        width: 100%
        margin-top: 110px
        max-width: 701px
        overflow hidden
        h1
            text-align: center
            font-family: 'Helvetica Now Display'
            font-size: 50px
            color: #222B39
            font-weight: 300
            user-select none
        h4
            text-align: center
            font-family: 'Helvetica Now Display'
            font-size: 30px
            color: #4F5A6B
            font-weight: 200
            user-select none
        h5    
            text-align: left 
            font-family: 'Helvetica Now Display'
            font-size: 15px
            color: #222B39
            font-weight: 300
            user-select none
            margin-bottom: 21px