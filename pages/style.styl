
.page
    display flex
    flex-direction: column
    align-items: center
    justify-content: center
    min-width 100vw
    min-height: 100vh
    padding: 16px
    .layout-box
        width: 100%
        height: 100%
        max-width: 701px
        min-height: 590px
        h1
            text-align: center
            font-family: 'Helvetica Now Display'
            font-size: 50px
            color: #222B39
            font-weight: 300
            user-select none
        h4
            text-align: center
            font-family: 'Helvetica Now Display'
            font-size: 30px
            color: #4F5A6B
            font-weight: 100
            user-select none