
.post
    width: 100%
    display flex
    flex-direction: column

div:nth-child(1)
    display: flex
    flex-direction: column
    h2
        font-family: 'Playfair Display'
        text-align: left   
        font-size: 20px
        color: #4F5A6B
        font-weight: normal
        user-select none 
        cursor pointer
        text-decoration: underline
        margin: 0
    span
        font-family: 'Playfair Display'
        font-size: 18px
        text-align: left   
        font-size: 10px
        color: #4F5A6B
        font-weight: normal
        user-select none 

div:nth-child(2)
    font-family: 'Helvetica Now Display'
    font-size: 18px
    margin-top: 10px
    margin-bottom: 34px
    overflow: hidden
    text-overflow: ellipsis
    display: -webkit-box
    -webkit-line-clamp: 3
    -webkit-box-orient: vertical
