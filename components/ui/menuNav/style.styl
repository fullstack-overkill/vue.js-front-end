@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css');
.nav
    display: flex
    align-items: center
    justify-content: center
    margin-top: 40px
    margin-bottom: 40px
    a:hover
        text-decoration: none
    a
        display: flex
        justify-content: center
        align-items: center
        flex-direction: row
        font-family: 'Playfair Display';
        text-align: center  
        font-size: 20px
        color: #4F5A6B
        font-weight: 300
        user-select none 
        i
            margin-top: 6px
            margin-left: 8px
            margin-right: 8px
            text-align: center
            font-size: 10px
            color: #4F5A6B
            user-select none
    .nuxt-link-exact-active    
        color: #FFA500
